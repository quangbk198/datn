<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- App theme fullscreen have status bar-->
    <style name="AppTheme.FullScreen.LightStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/light_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Button Blue => using set style= @Style/ButtonBlue -->
    <style name="ButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="SwitchGreen" parent="Widget.AppCompat.Button">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/light_blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/light_blue</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/light_blue</item>
    </style>
</resources>